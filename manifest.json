{
  "manifest_version": 2,
  "name": "Streamr News",
  "description": "News extension",
  "version": "1.0.0",
  "icons": { "128": "icon_128.png" },
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["popup.js"]
    }
  ],
  "permissions": ["tabs", "activeTab", "storage"]
}
